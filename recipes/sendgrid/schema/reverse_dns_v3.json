        "valid": {
          "type": {
            "name": "Boolean",
            "type": "named"
          },
          "http": {
            "type": [
              "boolean"
            ]
          }
        }
      }
    },
    "ValidateReverseDnsResultValidationResultsObject": {
      "description": "The specific results of the validation.",
      "fields": {
        "a_record": {
          "type": {
            "type": "nullable",
            "underlying_type": {
              "name": "ValidateReverseDnsResultValidationResultsARecordObject",
              "type": "named"
            }
          },
          "http": {
            "type": [
              "object"
            ]
          }
        }
      }
    }
